            android:TabbedPage.ToolbarPlacement="Bottom"
            xmlns:local="clr-namespace:TabbedPageDemo"

            >
            
            <!--Home tab-->
            <NavigationPage Title="Home">
                <x:Arguments>
                    <local:HomePage Title="Home" IconImageSource="home.png"/>
                </x:Arguments>
            </NavigationPage>


            
            <!--Settings tab-->
            <local:Settings Title="Settings" IconImageSource="settings.png"/>
    
